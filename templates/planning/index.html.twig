{% extends 'base.html.twig' %}

{% block title %}Planning index{% endblock %}

{% block body %}
    <h1 class="text-dark text-center mx-auto">Planning</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Start</th>
                <th>End</th>
                <th>Background_color</th>
                <th>Text_color</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for planning in plannings %}
            <tr>
                <td>{{ planning.id }}</td>
                <td>{{ planning.title }}</td>
                <td>{{ planning.start ? planning.start|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ planning.end ? planning.end|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ planning.backgroundColor }}</td>
                <td>{{ planning.textColor }}</td>
                <td>
                    <a href="{{ path('app_planning_show', {'id': planning.id}) }}">Voir</a>
                    <a href="{{ path('app_planning_edit', {'id': planning.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_planning_new') }}">Cr√©er nouveau</a>
{% endblock %}
