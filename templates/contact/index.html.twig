{# templates/contact/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Contactez-nous{% endblock %}

{% block body %}



    <header class="disciplineHeader ">

        <nav class="navbar navbar-expand-lg navbar-light p-4 ">
            <div class="container-fluid ">
                <a class="navbar-brand text-light" href="{{ path('home') }}">MMA Pulse </a>


                <div class="testNav " >
                    <ul class=" d-flex ms-auto list-unstyled ">

                        <li class="nav-item">
                            <a class=" mx-2" href="{{ path('app_discipline') }}">Disciplines</a>
                        </li>

                        <li class="nav-item">
                            <a class=" mx-2" >Contact</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

    </header>

    <div class="container contact mb-5 bg-white p-5">
        <h2 class="text-center">Vous avez une question ?</h2>
        <p class="text-center" style="color: #970011">Contactez-nous ! </p>

        <div class="row">
            <div class="col-md-6 mx-auto">
                {{ form_start(formulaire) }}
                <div class="form-group text-center">
                    {{ form_label(formulaire.email) }}
                    {{ form_widget(formulaire.email, {'attr': {'placeholder': 'Votre adresse e-mail', 'class': 'form-control'}  }) }}
                    {{ form_errors(formulaire.email) }}
                </div>

                <div class="form-group text-center">
                    <label for="" class="text-left">Votre message</label>
                    {{ form_widget(formulaire.content, {'attr': {'placeholder': 'Votre message', 'class': 'form-control'}}) }}
                    {{ form_errors(formulaire.content) }}
                </div>

                <div class="text-center">
                    {{ form_widget(formulaire.envoyer, {'label': 'Envoyer', 'attr': {'class': 'btn', 'style': 'background-color:#970011; color:white;'}}) }}
                </div>
                {{ form_end(formulaire) }}
            </div>
        </div>
    </div>






{% endblock %}
